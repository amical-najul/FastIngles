# Fast-Ingles Backend Configuration
# Copy this file to .env and fill in your values

# App Settings
APP_NAME=Fast-Ingles API
APP_VERSION=1.0.0
DEBUG=false

# Database (PostgreSQL)
# For Docker: postgresql+asyncpg://postgres:postgres@postgres:5432/fastingles
# For local: postgresql+asyncpg://postgres:postgres@localhost:5432/fastingles
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/fastingles

# JWT Secret (CHANGE THIS IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production-minimum-32-chars

# Default AI Provider: gemini, claude, chatgpt, deepseek
DEFAULT_AI_PROVIDER=gemini

# Google Gemini
GEMINI_API_KEY=AIzaSyADgz0tA44x7PiV9BxK1GUP4-SG1tbn_oc
GEMINI_MODEL=gemini-2.5-flash

# Anthropic Claude
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI ChatGPT
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat

# MinIO Object Storage
# For Docker: minio:9000
# For local: localhost:9000
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=fastingles-storage
MINIO_SECURE=false

# CORS Origins (comma separated for multiple)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:80","http://frontend:80"]
